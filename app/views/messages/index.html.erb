<h3>Your conversation with <%= @user.email.capitalize %> :</h3>

<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <% if @messages != [] %>
      <ul>
        <% @messages.each do |message| %>
          <% if message.user == @myself %>
            <li class="right-orange-user">
          <% else %>
            <li class="left-grey-user">
          <% end %>
          <h6><%= message.user.email.capitalize %></h6>
          <p><%= message.content %></p>
        </li>
        <% end %>
      </ul>
      <% else %>
          <p>DÃ©butez votre conversation avec <%= @user.email.capitalize %></p>
      <% end %>

      <div class="formulaire">
        <%= render "messages/form" %>
      </div>
    </div>
  </div>
</div>


