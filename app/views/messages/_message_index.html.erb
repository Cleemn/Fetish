<div class="my-chat">
<!--   <h5>Votre conversation avec <%= @user.user_name.capitalize %> :</h5> -->
      <% if @messages.empty? %>
        <p>DÃ©butez votre conversation avec <%= @user.user_name.capitalize %></p>
      <% end %>
      <ul id="my-chat-list">
        <% if !@messages.empty? %>
          <% @messages.each do |message| %>
            <%= render "messages/message_content", message: message, user: current_user %>
          <% end %>
        <% end %>
      </ul>

      <div class="chat-zone">
        <div class="formulaire">
          <%= render "messages/form", match: @match, message: @message %>
        </div>

        <div class="message-icones">
          <div class="message-icones-right">
            <%= link_to match_end_path(match_id: @match.id), :method => :patch do %>
               <i class="fas fa-ban"></i>
            <% end %>
            <%= link_to user_reports_path(user_id: @user.id), :method => :post do %>
               <i class="fas fa-exclamation-triangle"> </i>
            <% end %>
          </div>
        </div>
      </div>
</div>
