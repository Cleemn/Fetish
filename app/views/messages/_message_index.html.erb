<div class="container">
  <div class="my-chat">
    <h4>Votre conversation avec <%= @user.user_name.capitalize %> :</h4>
        <% if @messages != [] %>
        <ul id="my-chat-list">
          <% @messages.each do |message| %>
            <%= render "messages/message_content", message: message, user: current_user %>
          <% end %>
        </ul>
        <% else %>
            <p>DÃ©butez votre conversation avec <%= @user.user_name.capitalize %></p>
        <% end %>

        <div class="formulaire">
          <%= render "messages/form", match: @match, message: @message %>
        </div>
  </div>
</div>


