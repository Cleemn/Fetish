<div class="my-chat">
  <h5>Votre conversation avec <%= @user.user_name %>.</h5>
      <h8>Ceci est le début de vos échanges privés avec <%= @user.user_name %>.</h8>
      <% if @messages != [] %>
      <ul id="my-chat-list">
        <% @messages.each do |message| %>
          <%= render "messages/message_content", message: message, user: current_user %>
        <% end %>
      </ul>
      <% else %>
          <p>Débutez votre conversation avec <%= @user.email.capitalize %></p>
      <% end %>

      <div class="formulaire">
        <%= render "messages/form", match: @match, message: @message %>
      </div>

      <div class="message-icones">
        <div class="message-icones-right">
          <!--%= link_to do %--->
            <!--i class="far fa-image"></i-->
          <!--% end %-->
          <%= link_to do %>
            <i class="fas fa-microphone"></i>
          <% end %>
          <%= link_to match_end_path(match_id: @match.id), :method => :patch do %>
             <i class="fas fa-hand-paper"></i>
          <% end %>
          <%= link_to user_reports_path(user_id: @user.id), :method => :post do %>
             <i class="fas fa-exclamation-triangle"> </i>
          <% end %>
        </div>
      </div>
</div>

