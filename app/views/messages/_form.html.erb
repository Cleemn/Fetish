<%= simple_form_for [match, message], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Ecrivez votre message ici" %>
  <%= f.file_field :picture %>
  <%= f.submit "Envoyer", class: "btn btn-primary", id: "send-btn" %>
<% end %>

