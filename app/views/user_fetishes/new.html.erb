
    <div class="container">
      <h2 class="form-title my-4">Ajouter mes fétiches</h2>

      <%= simple_form_for [@user, @user_fetish] do |f| %>
      <div class="fetish-choices">
        <% Fetish.all.each do |fetish|  %>
          <input  type="checkbox" class="hidden" value="<%=fetish.id%>" name="user_fetish[fetish_id][]" id="user_fetish_fetish_id_<%=fetish.id%>" multiple>
          <label class="fetish-choice <%= "active" if current_user.fetishes.include?(fetish) %>" for="user_fetish_fetish_id_<%= fetish.id %>">
            <%= image_tag fetish.image, width: 30, height: 30, crop: :fill %>
            <div class="text my-2">
            <%= fetish.name %>
            </div>
          </label>
        <% end %>
        </div>
      </div>
        <div class="d-flex justify-content-center">
          <%= f.submit "Mettre à jour mes fétiches", class: "btn-home m-4"%>
        </div>
      <% end %>
    </div>

<% if user_signed_in? %>
  <div class="nav_bottom d-flex align-items-center justify-content-around border-top">

    <%= link_to dashboard_path do %><i class="fas fa-user fa-2x py-3" style="color:#4ecdc4"></i><% end %>

    <%= link_to random_path do %><i class="fas fa-feather-alt fa-2x py-3"></i><% end %>

    <% if !current_user.matches.empty? %>
      <% if current_user.match_as_u1.where(checked_by_u1: false).size > 0 || current_user.match_as_u2.where(checked_by_u2: false).size > 0 %>
        <%= link_to match_messages_path(current_user, @user_last_match), class: "the-bell" do %>
          <div id="bell" class="animated infinite tada"><i class="fas fa-heart fa-2x py-3"></i></div></%><% end %>
      <% else %>
        <%= link_to match_messages_path(current_user, @user_last_match) do %><i class="fas fa-heart fa-2x py-3"></i><% end %>
      <% end %>
    <% else %>
      <%= link_to random_path do %><i class="fas fa-heart fa-2x py-3"></i><% end %>
    <% end %>

    <%= link_to root_path do %><i class="fas fa-home fa-2x py-3"></i><% end %>
  </div>
<% end %>
