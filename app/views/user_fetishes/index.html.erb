<div>
  <% if @user.user_fetishes.empty? %>
    <div class="container text-center p-5 m-5">
      <%= link_to "Back to dashboard", dashboard_path, class:"btn btn-outline-danger" %>
      <h3 class="m-4">Vous n'avez pas anecore ajouté de fétiches.</h3>
      <h4 class="m-4">On y va ?</h4>
      <%= link_to "Ajouter mes fétiches", new_user_user_fetish_path, class:"btn-home" %>
    </div>
  <% elsif @user_fetish %>
    <div class="container">
      <%= link_to "Back to dashboard", dashboard_path, class:"btn btn-outline-danger" %>
      <div class="user-fetishes text-center p-5 m-5">
        <div class="title">
          <h4>Mes fétiches</h4>
        </div>
        <div class="content-fetishes-index">
          <% @user.user_fetishes.each do |user_fetish| %>
            <div class="clickable">
              <%= image_tag user_fetish.fetish.image, width: 70, height: 70, crop: :fill %>
              <small><%= user_fetish.fetish.name %></small>
              <%= link_to user_user_fetish_path(@user, user_fetish), method: :delete, data: { confirm: "Are you sure?" }, class:"p-2" do %><i class="fas fa-trash fa-1x" style="color:#439775"></i>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= link_to "Ajouter d'autres fétiches", new_user_user_fetish_path, class:"btn-home" %>
      </div>
    </div>
  <% end %>
</div>
