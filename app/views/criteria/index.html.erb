<div>
  <% if @criterium.nil? %>
    <div class="container text-center p-5 m-5">
      <%= link_to "Back to dashboard", dashboard_path, class:"btn btn-outline-danger text-center my-2 mx-auto" %>
      <h3 class="m-4">Vous n'avez pas encore ajouté de critères.</h3>
      <h4 class="m-4">On y va ?</h4>
      <%= link_to "Ajouter mes critères", new_user_criterium_path, class:"btn-home" %>
    </div>
  <% else %>
  <div class="container">
    <%= link_to "Back to dashboard", dashboard_path, class:"btn btn-outline-danger text-center my-2 mx-auto" %>
    <div class="row d-flex align-items-center">
      <div class="contenu col-12 col-lg-6 py-2">
        <div class="card-product pr-2">
          <% if @criterium.gender == "Homme" %>
            <img src="https://previews.123rf.com/images/martialred/martialred1605/martialred160500002/56300924-ic%C3%B4ne-homme-ou-salle-de-bains-signe-de-toilettes-des-hommes-plat-pour-les-applications-et-les-sites-web.jpg" class="p-3">
          <% elsif @criterium.gender == "Femme" %>
            <img src="https://cdn.icon-icons.com/icons2/510/PNG/512/woman_icon-icons.com_49954.png" alt="" class="p-3">
          <% end %>
          <div class="card-product-infos">
            <h2>
              Je suis intéressé(e) par les <%= @criterium.gender.downcase %>s qui habitent près de <%= @criterium.localisation %> et qui ont <%= @criterium.age %> ans.
            </h2>
          </div>
        </div>
      </div>
      <div class="contenu col-12 col-lg-6">
        <h2 class="form-title text-center">Modifier mes critères</h2>
        <%= simple_form_for [@user, @criterium] do |f| %>
          <%= f.input :gender, collection: ["Homme", "Femme"] %>
          <%= f.input :age, collection: 18..60 %>
          <%= f.input :localisation %>
          <div class="d-flex justify-content-center">
            <%= f.submit "Mettre à jour mes critères", class: "btn-home m-4"%>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="nav_bottom d-flex align-items-center justify-content-around border-top">

    <%= link_to dashboard_path do %><i class="fas fa-user fa-2x py-3" style="color:#4ecdc4"></i><% end %>

    <%= link_to random_path do %><i class="fas fa-feather-alt fa-2x py-3"></i><% end %>

    <% if !current_user.matches.empty? %>
      <% if current_user.match_as_u1.where(checked_by_u1: false).size > 0 || current_user.match_as_u2.where(checked_by_u2: false).size > 0 %>
        <%= link_to match_messages_path(current_user, @user_last_match), class: "the-bell" do %>
          <div id="bell" class="animated infinite tada"><i class="fas fa-bell fa-2x py-3"></i></div></%><% end %>
      <% else %>
        <%= link_to match_messages_path(current_user, @user_last_match) do %><i class="fas fa-bell fa-2x py-3"></i><% end %>
      <% end %>
    <% else %>
      <%= link_to random_path do %><i class="fas fa-bell fa-2x py-3"></i><% end %>
    <% end %>

    <%= link_to root_path do %><i class="fas fa-home fa-2x py-3"></i><% end %>
  </div>
<% end %>
