<% if user_signed_in? %>
  <div class="nav_bottom d-flex align-items-center justify-content-around border-top">

    <%= link_to dashboard_path do %><i class="fas fa-user fa-2x py-3" style="color:#FA8072"></i><% end %>

    <%= link_to random_path do %><i class="fas fa-feather-alt fa-2x py-3" style="color:#4ecdc4"></i><% end %>
    <% if !current_user.matches.empty? %>
      <% if current_user.match_as_u1.where(checked_by_u1: false).size > 0 || current_user.match_as_u2.where(checked_by_u2: false).size > 0 || current_user.newmess? > 0 %>
        <%= link_to match_messages_path(@user_last_match), class: "the-bell" do %>
          <div id="bell" class="animated infinite heartBeat"><i class="fas fa-bell fa-2x py-3"></i></div></%><% end %>
      <% else %>
        <%= link_to match_messages_path(@user_last_match) do %><i class="fas fa-bell fa-2x py-3"></i><% end %>
      <% end %>
    <% else %>
      <%= link_to random_path do %><i class="fas fa-bell fa-2x py-3"></i><% end %>
    <% end %>

    <%= link_to root_path do %><i class="fas fa-home fa-2x py-3"></i><% end %>

    <!-- <%#= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-power-off fa-2x"></i><%# end %> -->
  </div>
<% end %>
