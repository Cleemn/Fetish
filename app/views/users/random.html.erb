  <div id="not-to-be-seen-left"></div>
  <!-- <div style="width: 30px; height: 30px; background:red;"></div> -->
  <div class="card-trip random">
    <% if @user == nil %>
    <div class="lonely">
      <h6>Aucun utilisateur ne correspond Ã  votre recherche... ðŸ˜¢</h6>
      <%= image_tag "lonely.jpg", width: 200, height: 200, crop: :fill, class:"animated swing"%>
