function displayPopup() {
  const content = document.querySelector('.random');
  content.insertAdjacentHTML('beforeend', '<%= j render "users/match_modal", match: @match %>');
  const matchId = '<%= @match.id %>';
  const string = `#match-modal-${matchId}`;
  $(string).modal();
}

<% if @is_match == true %>
  displayPopup();
<% else %>
  window.location.replace("<%= random_path %>")
<% end %>
