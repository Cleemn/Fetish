function displayPopup(modal, matchId) {
  const content = document.querySelector('.random');
  content.insertAdjacentHTML('beforeend', modal);
  const string = `#match-modal-${matchId}`;
  $(string).modal();
}

<% if @is_match == true %>
  displayPopup('<%= j render "users/match_modal", match: @match %>', '<%= @match.id %>');
<% else %>
  window.location.replace("<%= random_path %>")
<% end %>
